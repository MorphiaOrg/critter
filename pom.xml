                <version>${bottlerocket.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.shyiko</groupId>
                <artifactId>ktlint</artifactId>
                <version>${ktlint.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>org.slf4j</groupId>
